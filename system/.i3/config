        focused_workspace       #586e75 #073642 #93a1a1
        active_workspace        #586e75 #073642 #93a1a1
        inactive_workspace      #073642 #222222 #93a1a1
        urgent_workspace        #586e75 #dc322f #fdf6e3
    }
}

